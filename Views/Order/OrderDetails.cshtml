@model OrderDetailsViewModel

<h2>Order Details</h2>

<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            var cartItem = Model.CartItems.FirstOrDefault(ci => ci.ProductId == product.ProductId);
            <tr>
                <td>@product.Title</td>
                <td>@product.Price</td>
                <td>@(cartItem?.Quantity ?? 0)</td>
            </tr>
        }
    </tbody>
</table>
