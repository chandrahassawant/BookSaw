@model BulkyWeb.Models.Product

<div class="container mt-4">
    <h2 class="text-center mb-4">Add/Edit Product</h2>
    <div asp-validation-summary="All"></div>

    <!-- Form for Creating or Editing Product -->
    <form asp-controller="Product" asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter product title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <label for="categorySelect">Category</label>
        <select asp-for="CategoryId" id="categorySelect" name="CategoryId" class="form-control">
            <option value="">Select a category</option> <!-- Default placeholder -->
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.CategoryId">@category.Name</option>
            }
        </select>

        <div class="mb-3">
            <label asp-for="ISBN" class="form-label">ISBN</label>
            <input asp-for="ISBN" class="form-control" placeholder="Enter ISBN" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Author" class="form-label">Author</label>
            <input asp-for="Author" class="form-control" placeholder="Enter author name" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" placeholder="Enter product description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ListPrice" class="form-label">List Price</label>
            <input asp-for="ListPrice" type="number" class="form-control" placeholder="Enter list price" />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Price for 1-50</label>
            <input asp-for="Price" type="number" class="form-control" placeholder="Enter price for 1-50" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price50" class="form-label">Price for 50+</label>
            <input asp-for="Price50" type="number" class="form-control" placeholder="Enter price for 50+" />
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price100" class="form-label">Price for 100+</label>
            <input asp-for="Price100" type="number" class="form-control" placeholder="Enter price for 100+" />
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">Image URL</label>
            <input asp-for="ImageUrl" type="url" class="form-control" placeholder="Enter image URL" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>


      

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>
            <div class="col-10">
                <a asp-controller="Product" asp-action="Index" class="btn btn-primary" style="width:100px">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
