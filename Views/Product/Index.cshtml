@model IEnumerable<BulkyWeb.Models.Product>

@{
    if (Model == null || !Model.Any())
    {
        <p>No products found.</p>
    }
}

<section id="featured-books" class="py-2 my-2">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <div class="section-header align-center">
                    <h2 class="section-title">Featured Books</h2>
                </div>

                <div class="product-list" data-aos="fade-up">
                    <div class="row">
                        @foreach (var product in Model)
                        {
                            <div class="col-md-3">
                                <div class="product-item">
                                    <figure class="product-style">
                                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                                        {
                                            <img src="@product.ImageUrl" alt="Product Image" class="product-item img-fluid rounded equal-height" />
                                        }
                                        else
                                        {
                                            <img src="~/booksaw-1.0.0/booksaw-1.0.0/images/default-product.jpg" alt="Default Image" class="product-item img-fluid rounded equal-height" />
                                        }
                                        @* <form asp-controller="Product" asp-action="AddToCart" method="post">
                                            <input type="hidden" name="ProductId" value="@product.ProductId" />
                                            <button type="submit" class="add-to-cart" data-product-tile="add-to-cart">Add to Cart</button>
                                        </form> *@
                                        <form asp-controller="Product" asp-action="ProductDetail" method="post">
                                            <input type="hidden" name="ProductId" value="@product.ProductId" />
                                            <button type="submit" class="add-to-cart" data-product-tile="add-to-cart">Product Details</button>
                                        </form>
                                    </figure>
                                    <figcaption>
                                        <h3>@product.Title</h3>
                                        <span>@product.Author</span>
                                        <div class="item-price">@product.Price.ToString("C")</div>
                                    </figcaption>
                                </div>
                            </div>
                        }
                    </div><!-- ft-books-slider -->
                </div><!-- grid -->
            </div><!-- inner-content -->
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="btn-wrap align-right">
                    <a href="#" class="btn-accent-arrow">View all products <i class="icon icon-ns-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/booksaw-1.0.0/booksaw-1.0.0/js/jquery-1.11.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
<script src="~/booksaw-1.0.0/booksaw-1.0.0/js/plugins.js"></script>
<script src="~/booksaw-1.0.0/booksaw-1.0.0/js/script.js"></script>

<style>
    .product-item img.equal-height {
        height: 350px;
        width: 400px;
        object-fit: fill; /* Ensure the image covers the container */
    }
</style>
